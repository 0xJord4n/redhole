{
  "manifest_version": 3,
  "name": "Redhole",
  "version": "1.0",
  "description": "Redhole helps you track and view blackhole dates for yourself and others on the 42 network using intra.42.fr. Easily access profile information and stay updated.",
  "host_permissions": [
    "https://pace-system.42.fr/api/v1/*/profile",
    "https://profile-aggr.intra.42.fr/api/v2/users/*"
  ],
  "incognito": "spanning",
  "content_scripts": [
    {
      "matches": [
        "*://profile.intra.42.fr/",
        "*://profile.intra.42.fr/users/*"
      ],
      "js": ["src/constants.js", "src/utils.js", "src/main.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png"
  },
  "author": "0xJord4n",
  "homepage_url": "https://github.com/0xJord4n/redhole",
  "short_name": "Redhole"
}
